<h1>orders#show</h1>

<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">
    <div class="col">
      <h4><strong>注文情報</strong></h4>
      <table class="table table-bordered border-dark m-4"  style="width: 70%">
        <tr>
          <td class="table-active" style="width: 20%">注文日</td>
          <td>注文</td>
        </tr>
        <tr>
          <td class="table-active">配送先</td>
          <td>配送</td>
        </tr>
        <tr>
          <td class="table-active">支払方法</td>
          <td>支払い</td>
        </tr>
        <tr>
          <td class="table-active">ステータス</td>
          <td>status</td>
        </tr>
      </table>
    </div>
    <div class="col">
      <h4><strong>請求情報</strong></h4>
      <table class="table table-bordered border-dark m-4"  style="width: 70%">
        <tr>
          <td class="table-active" style="width: 20%">商品合計</td>
          <td>合計金額</td>
        </tr>
        <tr>
          <td class="table-active">配送料</td>
          <td>配送金額</td>
        </tr>
        <tr>
          <td class="table-active"><strong>ご請求額</strong></td>
          <td>請求金額</td>
        </tr>
      </table>
      
    </div>
  </div>
  <h4><strong>注文内容</strong></h4>
  <table class="table table-bordered border-dark m-4" style="width: 100%">
    <thead>
      <tr>
        <th class="table-active">商品</th>
        <th class="table-active">単価（税込）</th>
        <th class="table-active">個数</th>
        <th class="table-active">小計</th>
      </tr>
    </thead>
    <tbody>
      <%# @items.each do |item| %>
        <tr>
          <td>商品名</td>
          <td>値段</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      <%# end %>
    </tbody>
  </table>
</div>