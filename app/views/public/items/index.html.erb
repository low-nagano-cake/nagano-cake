<div class='container my-5 px-sm-2'>

<!--ジャンル検索-->
<div class='row'>
  <div class="col-md-2">
    <table class="table">
    <thead>
        <tr>
            <th>ジャンル検索</th>
        </tr>
    </thead>
    <tbody>
        <tr><td>ケーキ</td></tr>
        <tr><td>焼き菓子</td></tr>
        <tr><td>プリン</td></tr>
        <tr><td>キャンディ</td></tr>
    </tbody>
</table>
  </div>

  <div class="col-md-9">

    <div class='row'>
      <div class="col-sm-12 mb-3">
        <h2>商品一覧(全<%= @items.count %>件)</h2>
      </div>
    <% @items.each do |item| %>
      <div class="col-sm-12 col-md-6 col-lg-3 d-flex flex-column">
        <%= image_tag(item.image) %>

        <h6><%= item.name %></h6>
        <p>¥<%= item.price %></p>

      </div>
    <% end %>
    </div>

</div>
</div>
</div>


