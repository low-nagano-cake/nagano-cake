<div class="container col-sm-12 col-md-8 col-lg-7 col-xl-7 px-5 px-sm-0" style="height: 750px">
  
  <!--ページ見出し-->
  <div class="row">
    <h3 class="ml-5 mt-5">マイページ</h3>
  </div>
  
  <!--見出し以外のコンテンツ-->
  <div class="row justify-content-center">
    <div class="col-10">
      
      <!--登録情報見出し、編集リンク-->
      <table class="m-4">
        <tr>
          <td>
            <h4>
              <strong>登録情報</strong>
            </h4>
          </td>
          <td>
            <%= link_to '編集する', edit_customer_path, class: "btn btn-success ml-5" %>
          </td>
        </tr>
      </table>
      
      <!--登録情報内容-->
      <table class="table table-bordered border-dark m-4">
        <tr>
          <td class="table-active col-3">氏名</td>
          <td class="col-9"><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      
      <!--配送先一覧、注文履歴一覧のリンク-->
      <table class="m-4">
        <tr>
          <td>
            <h4><strong>配送先</strong></h4>
          </td>
          <td>
            <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-5 my-3" %>
          </td>
        </tr>
        <tr>
          <td>
            <h4><strong>注文履歴</strong></h4>
          </td>
          <td>
            <%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-5" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>