<div class="container col-sm-12 col-md-8 col-lg-7 col-xl-7 px-5 px-sm-0">
  <div class="row">
    <h3 class="m-5">新規会員登録</h3>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr class="field">
        <td>
          名前
        </td>
        <td>
          <%= f.label :last_name, "(姓)", class: "ml-5" %>
        </td>
        <td>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control border border-dark" %>
        </td>
        <td>
          <%= f.label :first_name, "(名)", class: "ml-5" %>
        </td>
        <td>
          <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          フリガナ
        </td>
        <td>
          <%= f.label :last_name_kana, "(セイ)", class: "ml-5" %>
        </td>
        <td>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control border border-dark" %>
        </td>
        <td>
          <%= f.label :first_name_kana, "(メイ)", class: "ml-5" %>
        </td>
        <td>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          <%= f.label :email, "メールアドレス" %>
        </td>
        <td></td>
        <td>
          <%= f.email_field :email, autocomplete: "email", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          郵便番号(ハイフンなし)
        </td>
        <td></td>
        <td>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          住所
        </td>
        <td></td>
        <td colspan="3">
          <%= f.text_field :address, autocomplete: "address", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          電話番号(ハイフンなし)
        </td>
        <td></td>
        <td>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </td>
        <td></td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control border border-dark" %>
        </td>
      </tr>
      <tr class="field">
        <td>
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </td>
        <td></td>
        <td>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border border-dark" %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success btn-block mt-3" %>
          </div>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
  
  <div class="row ml-5">
    <h3>既に登録済みの方</h3>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-8 my-3">
      <p><%= render "public/shared/links" %></p>
    </div>
    
  </div>
</div>