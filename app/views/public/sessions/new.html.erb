<div class="container col-sm-12 col-md-8 col-lg-7 col-xl-7 px-5 px-sm-0">
  <h3 class="my-4">ログイン</h3>
  <!--ログインフォーム-->
  <!--<div class="row">-->
  <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
    <div class="login-form m-4">
      <h5 class="my-3">会員の方はこちらからログイン</h5>
      <div class="row mb-3 ml-lg-4">
        <%= f.label :email, "メールアドレス", class: "col-lg-4 col-xl-4 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-7 col-xl-7" %>
      </div>
    
      <div class="row mb-3 ml-lg-4">
        <%= f.label :password, "パスワード", class: "col-lg-4 col-xl-4 col-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-7 col-xl-7" %>
      </div>
      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <!--新規登録リンク-->
    <div class="signin-link m-4">
      <h5 class="my-3">会員登録がお済みでない方</h5>
      <div class="row m-4">
        <%= render "public/shared/links" %>
      </div>
    </div>
    

      
    <% end %>
  <!--</div>-->
  
</div>








