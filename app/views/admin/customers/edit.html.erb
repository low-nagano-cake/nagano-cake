

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= @customer.last_name %><%= @customer.first_name %>の会員情報</h2>
      <div class="col-md-12 ml-auto">
       <%= form_with model:@customer, local:true do |f| %>

       <div class="form-group">
         <%= f.label :会員ID %>
         <%= @customer.id %>
       </div>

				    <%= f.label :氏名 %>
       <div class="form-group d-flex flex-row" >
				    <%= f.text_field :last_name, autofocus: true, class: "form-control w-25 mr-3" %>
				    <%= f.text_field :first_name, autofocus: true, class: "form-control w-25" %>
			    </div>

				    <%= f.label :フリガナ %><br>
       <div class="form-group d-flex flex-row" >
				    <%= f.text_field :last_name_kana, autofocus: true, class: "form-control w-25 mr-3"  %>
				    <%= f.text_field :first_name_kana, autofocus: true, class: "form-control w-25"  %>
			    </div>

        <div class="form-group">
         <%= f.label :郵便番号 %>
         <%= f.text_field:postal_code, class: "form-control w-25" %>
       </div>

        <div class="form-group">
         <%= f.label :住所 %>
         <%= f.text_field:address, class: "form-control" %>
       </div>

        <div class="form-group">
         <%= f.label :電話番号 %>
         <%= f.text_field:telephone_number, class: "form-control w-25" %>
       </div>

        <div class="form-group">
         <%= f.label :メールアドレス %>
         <%= f.text_field:email, class: "form-control w-30" %>
       </div>

        <div class="form-group">
         <%= f.label :is_deleted, '有効', value: 1 %>
         <%= f.radio_button :is_deleted, '1', {:checked => true} %>
         <%= f.label :is_deleted, '退会', value: 0 %>
         <%= f.radio_button :is_deleted, '0', {} %>
        </div>

       <div class="form-group">
         <%= f.submit "変更", class: "btn btn-success" %>
       </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

