<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @customer.last_name %><%= @customer.first_name %>の会員情報</h2>
      <div class="col-md-6 ml-auto">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">会員ID</th>
                <td style>
                  <%= @client.id %>&ensp;
                  <% if @client.deleted_at == nil %>
                    有効
                  <% else %>
                    退会
                  <% end %>
                </td>
              </tr>

              <tr>
                <th scope="col">氏名</th>
                <td style><%= @client.first_name %>&ensp;<%= @client.last_name %></td>
              </tr>

              <tr>
                <th scope="col">カナ</th>
                <td style><%= @client.first_name_kana %>&ensp;<%= @client.last_name_kana %></td>
              </tr>

              <tr>
                <th scope="col">郵便番号</th>
                <td style><%= @client.postal_code %></td>
              </tr>

              <tr>
                 <th scope="col">住所</th>
                <td style><%= @client.street_address %></td>
              </tr>

              <tr>
                <th scope="col">電話番号</th>
                <td style><%= @client.phone_number %></td>
              </tr>

              <tr>
                <th scope="col">メールアドレス</th>
                <td style><%= @client.email %></td>
              </tr>
          </thead>
  	</table>
      </div>
    </div>
  </div>
</div>