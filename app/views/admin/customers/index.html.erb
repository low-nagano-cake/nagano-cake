<%= render 'admin/layouts/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <table class="table table-success table-striped">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td>
                <% if @customer.deleted_at == nil %>
                    有効
                  <% else %>
                    退会
                <% end %>
            </td>
          </tr>
        </tbody>
        </thead>
      </table>
      <%= link_to "変更", edit_admin_customer_path(@customer), class: "btn btn-succsess" %>
      <%= link_to "注文履歴一覧", admin_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
