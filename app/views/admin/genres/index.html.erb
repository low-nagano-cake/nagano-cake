<div class="container"> 

<div class="row my-4">
 <div class="col-4 bg-light">
   <h3>ジャンル一覧・追加</h3>
  </div>
 </div>
 
<div class="row">

<div class="col-auto">
<h5>ジャンル名</h5>
</div>

<div class="col-auto">
<%= form_with model: @genre, url: admin_genres_path do |f| %>
<%=f.text_field :name %>
<%=f.submit "新規登録",class: "ml-3 btn btn-success btn-xs" %>
<% end %>
</div>
</div>

<div class="row my-5">
<div class="col-md-5">
<table class="table">
<thead class="table-active">
 <tr>
  <th></th>
  <th>ジャンル</th>
  <th></th>
 </tr>
 </thead>
 <tbody>
<% @genres.each do |genre| %> 
<tr>
<td style="width:200px;"><%= genre.name %></td>
<td><%= link_to "編集する", edit_admin_genre_path(genre.id),class: "btn btn-success btn-xs" %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>


</div>
