<div class="container">
  <div="row">
    <h2>注文履歴詳細</h2>
    <div class="ml-auto">
      <div class="order_info">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>購入者</th>
              <td><%= link_to @order.customer.last_name + @order.customer.first_name %></td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td><%= @order.postal_code + @order.address %></td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with model:@order, url: admin_order_path, method: :patch, local:true do |f| %>
                <%= f.select :status, Order.statuses_i18n.invert %>
                <%= f.submit "更新",class:"btn btn-primary" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製造ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
             <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.add_tax_price * order_detail.amount %></td>
              <%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
                <td>
                  <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                  <%= f.submit "更新",class:"btn btn-primary ml-5" %>
                </td>
              <% end %>
          </tr>
          <% end %>
          </tbody>
        </table>
        <table table col-4 ml-auto table-borderless>
          <tr>
            <th>商品小計</th>
            <td><%= @order.total_payment - @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>請求合計金額</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </table>

      </div>
    </div>
  </div>
</div>