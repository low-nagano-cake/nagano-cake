<div class="container">
  <div="row">
    <h2>注文履歴詳細</h2>
    <div class="ml-auto">
      <div class="order_info">
        <table class="table">
          <tbody>
            <tr>
              <th>購入者</th>
              <td><%= link_to @order.customer.last_name + @order.customer.first_name, admin_customer(@order) %></td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td><%= @order.postal_code + @order.address %></td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with @model:@order, method: :patch, local:true do |f| %>
                <%= f.select :status, Order.statuses.keys.map { |c| [t("enum.order.status.#{c}"), c], class: "mb-3 sm:mb-0 mr-9 border border-line-200 rounded-[3px] rounded-[3px] py-3 pl-6 w-52 h-12 font-bold" %>
                <%= f.submit "更新",class:"btn btn-primary" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="col-md-8">  
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>制作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <%= @orders.each do |order| %>
             <tr>
            <td><%= order.name %></td>
            <td><%= order.price %></td>
            <td><%= order.amount %></td>
            <td><%= order.once_price * product_order.quantity %>
            </td>
            <td>
              <%= form_with(model: order, method: :patch, local: true) do |f| %>
              <%= f.select :making_status, OrderDetail.makingstatuses.keys.map { |m| [t("enum.order.status.#{m}"), m], class: "mb-3 sm:mb-0 mr-9 border border-line-200 rounded-[3px] rounded-[3px] py-3 pl-6 w-52 h-12 font-bold" %>
              <%= f.submit "更新",class:"btn btn-primary" %>
              <% end %>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>