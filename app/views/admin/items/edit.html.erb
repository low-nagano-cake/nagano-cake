商品の編集画面

<div class="container"> 
<div class="row justify-content-end">
  
<div class="col-sm-8 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>

  <div class="form-group row">
     <label for="image" class="col-sm-3 col-form-label">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

 <div class="form-group row">
    <label for="name" class="col-sm-3 col-form-label">商品名</label>
    <div class="col-sm-9">
    <%= f.text_field :name, class: 'form-control col-md-8' %>
    </div>
  </div>
  
   <div class="form-group row">
    <label for="introduction" class="col-sm-3 col-form-label">商品説明</label>
    <div class="col-sm-9">
    <%= f.text_field :introduction, class: 'form-control col-md-8' %>
    </div>
  </div>

<div class="form-group row">
    <label for="genre_id" class="col-sm-3 col-form-label">ジャンル</label>
    <div class="col-sm-9">
    <%= f.select :, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
  </div>
  
 <div class="form-group row">
    <label for="price" class="col-sm-3 col-form-label">税抜価格</label>
    <div class="col-sm-9">
    <%= f.text_area :price, class: 'form-control col-md-8' %>
    </div>
  </div>
      <div class="form-group">
    <%= f.label:is_active, '販売ステータス' %>
    <%=f.radio_button:is_active , true %>発売中
    <%=f.radio_button:is_active , false %>発売停止中
  </div>

  <div class>
  <%=f.submit '変更を保存'%>
  </div>
  
<% end %>



